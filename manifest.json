{
  "manifest_version": 3,
  "name": "SWAP",
  "version": "1.0",
  "description": "Swap Those Ugly Words! Try this extension to swap the triggering words by some funnier ones! Compatible with Chrome only - for now -",
  "icons": {
    "16": "/Images/swap16.png",
    "32": "/Images/swap32.png",
    "128": "/Images/swap128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/swap16.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
